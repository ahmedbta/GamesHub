{% extends 'base.html.twig' %}

{% block title %}Liste des Membres{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4 text-primary">Liste des Membres</h1>
    <div class="row justify-content-center">
        {% for member in members %}
            <div class="col-md-4 col-lg-3 mb-4">
                <div class="card shadow-sm hover-scale text-center">
                    <div class="card-body">
                        {% if member.profilePicture %}
                            <img src="{{ vich_uploader_asset(member, 'profilePictureFile') }}" alt="{{ member.nom }}" class="img-fluid rounded-circle mb-3" style="width: 100px; height: 100px;">
                        {% else %}
                            <img src="{{ asset('images/default-profile.png') }}" alt="Photo par défaut" class="img-fluid rounded-circle mb-3" style="width: 100px; height: 100px;">
                        {% endif %}
                        <h5 class="card-title">{{ member.nom }}</h5>
                        <a href="{{ path('app_member_show', {'id': member.id}) }}" class="btn btn-primary btn-sm w-100 mt-2">Voir Profil</a>
                    </div>
                </div>
            </div>
        {% else %}
            <p class="text-center text-muted">Aucun membre trouvé.</p>
        {% endfor %}
    </div>
</div>

<!-- Styling for hover effect -->
<style>
    .hover-scale {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .hover-scale:hover {
        transform: scale(1.05);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    }

    .card {
        border-radius: 15px;
    }
</style>
{% endblock %}
